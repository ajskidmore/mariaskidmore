rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.email != null;
    }

    // Profile collection - single document
    match /profile/{profileId} {
      // Anyone can read the profile
      allow read: if true;

      // Only authenticated admin can write
      allow write: if isAdmin();
    }

    // Music collection
    match /music/{musicId} {
      // Anyone can read music entries
      allow read: if true;

      // Only authenticated admin can create, update, or delete
      allow create, update, delete: if isAdmin();

      // Validate data structure on write
      allow write: if isAdmin() &&
        request.resource.data.keys().hasAll(['title', 'description', 'coverImageUrl', 'releaseDate']) &&
        request.resource.data.title is string &&
        request.resource.data.description is string &&
        request.resource.data.coverImageUrl is string;
    }

    // Videos collection
    match /videos/{videoId} {
      // Anyone can read videos
      allow read: if true;

      // Only authenticated admin can create, update, or delete
      allow create, update, delete: if isAdmin();

      // Validate data structure on write
      allow write: if isAdmin() &&
        request.resource.data.keys().hasAll(['title', 'url', 'description']) &&
        request.resource.data.title is string &&
        request.resource.data.url is string &&
        request.resource.data.description is string;
    }

    // Events collection
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;

      // Only authenticated admin can create, update, or delete
      allow create, update, delete: if isAdmin();

      // Validate data structure on write
      allow write: if isAdmin() &&
        request.resource.data.keys().hasAll(['date', 'venue', 'city']) &&
        request.resource.data.venue is string &&
        request.resource.data.city is string;
    }

    // Posts collection
    match /posts/{postId} {
      // Anyone can read published posts
      allow read: if true;

      // Only authenticated admin can create, update, or delete
      allow create, update, delete: if isAdmin();

      // Validate data structure on write
      allow write: if isAdmin() &&
        request.resource.data.keys().hasAll(['title', 'content', 'status']) &&
        request.resource.data.title is string &&
        request.resource.data.content is string &&
        request.resource.data.status in ['draft', 'published'];
    }

    // Contact messages collection
    match /contactMessages/{messageId} {
      // Only authenticated admin can read contact messages
      allow read: if isAdmin();

      // Anyone can create a contact message (but not update or delete)
      allow create: if true;

      // Only admin can update (mark as read) or delete
      allow update, delete: if isAdmin();

      // Validate contact message structure
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'message']) &&
        request.resource.data.name is string &&
        request.resource.data.email is string &&
        request.resource.data.message is string &&
        request.resource.data.name.size() > 0 &&
        request.resource.data.email.matches('.*@.*') &&
        request.resource.data.message.size() > 0;
    }

    // Social links collection
    match /socialLinks/{linkId} {
      // Anyone can read social links
      allow read: if true;

      // Only authenticated admin can create, update, or delete
      allow create, update, delete: if isAdmin();

      // Validate data structure on write
      allow write: if isAdmin() &&
        request.resource.data.keys().hasAll(['platform', 'url']) &&
        request.resource.data.platform is string &&
        request.resource.data.url is string;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
